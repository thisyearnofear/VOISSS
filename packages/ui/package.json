{
  "name": "@voisss/ui",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/index.native.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --external react --external clsx --external tailwind-merge && npm run build:native",
    "build:native": "tsup src/index.native.ts --format cjs,esm --external react-native --external react",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@voisss/shared": "workspace:*",
    "clsx": "^2.0.0",
    "lucide-react": "^0.525.0",
    "react": "19.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "~18.3.12",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3"
  }
}

{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/index.ts",
    "src/components/*.tsx",
    "src/utils/*.ts",
    "src/types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
